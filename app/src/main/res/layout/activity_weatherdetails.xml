<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bf"
    android:layout_height="match_parent"
    tools:context=".weatherdetails">

    <TextView
        android:id="@+id/textGrid"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Weather"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="34sp" />



<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">


</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"

                android:layout_marginRight="16dp"
                android:layout_marginTop="100dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                tools:targetApi="lollipop">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/first"
                        android:layout_width="355dp"
                        android:layout_height="215dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">


                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="224dp"
                            android:layout_height="92dp"
                            android:layout_alignEnd="@+id/humidity"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="25sp"
                            android:layout_marginRight="25sp"
                            android:text="27"
                            android:textSize="60sp" />


                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="64dp"
                            android:layout_marginEnd="40dp"
                            android:text="25%"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/wind"
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/temperature"
                            android:layout_marginStart="45dp"
                            android:text="Gentle\ \nspeed 24"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/clouds"
                            android:layout_width="143dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/wind"
                            android:layout_marginBottom="50dp"
                            android:text="Overcast Clouds"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Forecast"
                            android:textColor="@android:color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="43dp"
                            android:layout_height="39dp"
                            android:layout_alignBottom="@+id/wind"
                            android:layout_alignParentStart="true"
                            app:srcCompat="@drawable/wind"
                            android:layout_alignParentLeft="true" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="45dp"
                            android:layout_height="54dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/wind"
                            app:srcCompat="@drawable/cloud"
                            android:layout_alignParentLeft="true" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="36dp"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@+id/humidity"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="76dp"
                            app:srcCompat="@drawable/humidity"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/scrollableContents"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/first"
                        android:scrollbars="vertical">

                        <ListView
                            android:id="@+id/list3"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bg_login"
                            android:divider="@android:color/background_light"
                            android:dividerHeight="10dp" />


                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>





